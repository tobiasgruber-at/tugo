<h1>People</h1>
<%= render partial: "components/search", locals: { resource_path: (people_path), resource_name: "people" } %>
<% if @error %>
  <%= render partial: "components/error", locals: { error: @error } %>
<% end %>
<% unless @resources.nil? %>
  <%= render partial: "layouts/resources", locals: { resources: map_people(@resources, @favorites), title: nil, search_result: true} %>
<% end %>