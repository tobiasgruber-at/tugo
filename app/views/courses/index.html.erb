<%= form_with(url: courses_path, method: :get, data: {turbo_frame: "courses"}) do |form| %>
  <%= form.label :term, "Search for courses" %>
  <%= form.text_field :term %>
  <%= form.submit "Search", name: nil %>
<% end %>

<% if @error %>
  <%= render "components/error", error: @error %>
<% end %>

<%= turbo_frame_tag "courses" do %>
  <%= render "courses", courses: @resources %>
<% end %>
