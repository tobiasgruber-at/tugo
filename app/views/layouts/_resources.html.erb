<% unless search_result %>
  <h2><%= title %></h2>
<% end %>
<% if resources.nil? or resources == [] %>
  <div class="box box--light">
    <% if search_result %>
      <div class="box__title">Sorry we could not find what you are looking for</div>
      Try a different search term
    <% else %>
      <div class="box__title">No items found</div>
    <% end %>
  </div>
<% else %>
  <% if search_result %>
    <h2>Results for <span class="term"><%= @search_term.query %></span>:</h2>
  <% end %>
  <div class="list">
    <% resources.each do |resource| %>
      <div class="list__item btn btn--block ">
        <div class="flex-display flex-gap--xxs jc-space-between position-relative">
          <a class="position-relative flex-grow--1 ac-center" href="<%= resource.path %>">
            <div class="flex-display flex-column">
              <% unless resource.addition.nil? %>
                <div class="flex-display flex-gap--xs">
                  <span class="muted fs--xs"><%= resource.addition %></span>
                </div>
              <% end %>
              <div class="flex-display flex-gap--xxs">
                <% unless resource._prefix.nil? %>
                  <span class="italic"><%= resource._prefix %></span>
                <% end %>
                <span><%= resource.title %></span>
              </div>
            </div>
          </a>
          <div class="list-button">
            <%= render partial: "components/favorite-toggle-button", locals: { resource: resource } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
