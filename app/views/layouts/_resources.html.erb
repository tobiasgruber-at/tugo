<% unless search_result %>
  <h2><%= title %></h2>
<% end %>
<% if resources.nil? or resources == [] %>
  <div class="box box--light">
    <% if search_result %>
      <div class="box__title">Sorry we could not find what you are looking for</div>
      Try a different search term
    <% else %>
      <div class="box__title">No items found</div>
    <% end %>
  </div>
<% else %>
  <% if search_result %>
    <h2>Results for <span class="term"><%= @term %></span>:</h2>
  <% end %>
  <div class="list">
    <% resources.each do |resource| %>
      <a class="list__item btn btn--block" href="<%= resource.path %>">
        <div class="flex-display flex-column">
          <% unless resource.addition.nil? %>
            <div class="flex-display flex-gap--xs">
              <span class="muted fs--xs"><%= resource.addition %></span>
            </div>
          <% end %>
          <div class="flex-display flex-gap--xxs">
            <% unless resource._prefix.nil? %>
              <span class="italic"><%= resource._prefix %></span>
            <% end %>
            <span><%= resource.title %></span>
          </div>
        </div>
      </a>
      <% if resource.is_favorite %>
        <%= form_with model: Favorite.new, method: "delete" do |f| %>
            <%= f.hidden_field :item_id, :value => resource.id %>
            <%= f.submit "Remove favorite" %>
          <% end %>
      <% else %>
        <%= form_with model: Favorite.new do |f| %>
            <%= f.hidden_field :item_id, :value => resource.id %>
            <%= f.hidden_field :favorite_type, :value => resource.favorite_type %>
            <%= f.hidden_field :note, :value => "" %>
          <%= f.submit "Add favorite" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
